<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (you can set it to transparent if needed) -->
<!--    <item android:drawable="@android:color/white" />-->

    <!-- Rounded border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                    android:width="5dp"
                    android:color="#000000" /> <!-- Border color (red in this example) -->
            <corners android:radius="25dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
</layer-list>
