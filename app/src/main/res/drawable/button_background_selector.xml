<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal (sin presionar) -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@drawable/rounded_button_bg" /> <!-- Fondo predeterminado -->
        </shape>
    </item>
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red" /> <!-- Fondo rojo cuando se presiona -->
        </shape>
    </item>
</selector>
