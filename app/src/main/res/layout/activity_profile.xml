<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ProfileActivity">

    <ImageView
            android:layout_width="66dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/icons8_back_100"
            android:id="@+id/go_back_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/leisagun"
            android:background="@drawable/rounded_image_border"
            app:layout_constraintTop_toBottomOf="@id/go_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <TextView
            android:layout_width="287dp"
            android:layout_height="46dp"
            android:text="Name and Username"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/user_and_surname_view"

            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:textColor="#000000"/>

    <TextView
            android:layout_width="287dp"
            android:layout_height="46dp"
            android:text="Age"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/age_viewer"
            app:layout_constraintTop_toBottomOf="@id/user_and_surname_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:textColor="#000000"/>

    <TextView
            android:layout_width="287dp"
            android:layout_height="46dp"
            android:text="Email Address"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edittext_bg"
            android:id="@+id/email_address_view"
            app:layout_constraintTop_toBottomOf="@id/age_viewer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:textColor="#000000"/>
    <Spinner
            android:layout_width="287dp"
            android:layout_height="46dp"
            android:id="@+id/language_picker"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/email_address_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    <Button
            android:text="@string/select_fav"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:id="@+id/select_favourites"
            app:layout_constraintTop_toBottomOf="@id/language_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button_bg"
            android:textColor="#FFFFFF"/>

    <Button
            android:text="@string/logout"
            android:layout_width="213dp"
            android:layout_height="41dp"
            android:id="@+id/logout_user_button"
            app:layout_constraintTop_toBottomOf="@id/select_favourites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="116dp"
            android:background="@drawable/rounded_button_bg"
            android:textColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
